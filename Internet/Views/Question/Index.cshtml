@model IEnumerable<Internet.Models.Question>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create", new { id = ViewData["ANSWER_ID"] }) |
    <a href = "@Url.Content("~/Test/Index/")"> View Test</a>
</p>
<table>
    <tr>
        <th>
            QuestionBody
        </th>
        <th>
            TestID
        </th>
        <th>
            QuestionType
        </th>
        <th>
            Answers
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.QuestionBody)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Test.TestName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.QuestionType)
                    
        </td>
        <td>
            @foreach(var answer in item.Answers)
                    {
                        @answer.AnswerBody <p> правильный?  @answer.IsRight </p> 
                        <br />
                    }
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>
