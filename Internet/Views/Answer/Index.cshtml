@model IEnumerable<Internet.Models.Answer>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create", new { id = ViewData["QUESTION_ID"] }) |  
    <a href = "@Url.Content("~/Question/Index/" + ViewData["TEST_ID"])"> View Questions</a>
</p>
<table>
    <tr>
        <th>
            AnswerBody
        </th>
        <th>
            IsRight
        </th>
        <th>
            QuestionID
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.AnswerBody)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsRight)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.QuestionID)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>
